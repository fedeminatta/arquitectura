---
import Header from '@components/Header/Header.astro';

import { ViewTransitions } from 'astro:transitions';
import 'aos/dist/aos.css';
import '@styles/tailwind.css'; // Importar Tailwind CSS

interface Props {
  title: string;
}

const { title } = Astro.props;
export const prerender = false;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Inmobiliaria Demo" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <ViewTransitions />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
    <style is:global>
      @import url('../pages/_global.css');
      @import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');

      * {
        font-family: 'Poppins', sans-serif;
        box-sizing: border-box;
      }

      html {
        font-family: system-ui, sans-serif;
        background: #f1ffe6;
        scroll-behavior: smooth;
        overflow-x: hidden;
      }

      body {
        overflow-x: hidden;
      }
    </style>

    <script>
      import { aosInit } from '../utils/aos.js';

      // runs on initial page load
      aosInit();

      // runs on view transitions navigation
      document.addEventListener('astro:after-swap', aosInit);
    </script>
  </body>
</html>