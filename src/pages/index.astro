---
// import './global.css'
import Layout from '@layouts/Layout.astro';
import Proyects from '@components/Proyects.astro';
import proyectosArray from '@utils/proyectos';
import headerImg from '@img/header.webp';
---

<Layout title="Arquitectura demo">
  <img src={headerImg.src} alt="header imagen" />
  <section class="proyectos">
    {
      proyectosArray
        .slice(0, 2)
        .map((item) => (
          <Proyects
            title={item.titulo}
            description={item.description}
            img={item.img}
          />
        ))
    }
  </section>
</Layout>

<style lang="scss">
  .proyectos {
    padding: 40px;
    display: flex;
    flex-wrap: wrap;
    gap: 30px;
    justify-content: center;
  }

  @media screen and (max-width: 580px) {
    .proyectos {
      padding: 0px;
    }
  }
</style>
